<Window x:Class="Doancanhan.ThemSuaNguoiDung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm / Sửa Người Dùng" Height="400" Width="400" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="Tên đăng nhập:"/>
        <TextBox Margin="0,5,0,10" Text="{Binding TenDangNhap, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Mật khẩu:"/>
        <PasswordBox x:Name="txtMatKhau" Margin="0,5,0,10" Padding="5"/>

        <!-- Trong ThemSuaNguoiDung.xaml -->

        <TextBlock Text="Loại người dùng:"/>
        <ComboBox x:Name="cboLoaiNguoiDung" Margin="0,5,0,20" Padding="5"
          ItemsSource="{Binding}"
          DisplayMemberPath="TenLoai" 
          SelectedValuePath="MaLoai"
          SelectedValue="{Binding MaLoaiNguoiDung, Mode=TwoWay}"/>


        <TextBlock Text="Trạng thái:"/>
        <!-- SỬA BINDING Ở ĐÂY -->
        <CheckBox Margin="0,5,0,20" IsChecked="{Binding HoatDong, UpdateSourceTrigger=PropertyChanged}">Hoạt động</CheckBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Lưu" Width="80" IsDefault="True" Margin="0,0,10,0" Click="BtnLuu_Click"/>
            <Button Content="Hủy" Width="80" IsCancel="True" Click="BtnHuy_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
