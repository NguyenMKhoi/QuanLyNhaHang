<Window x:Class="Doancanhan.ThemSuaMonAn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm / Sửa Món Ăn" Height="400" Width="400"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="Tên món ăn:"/>
        <TextBox Margin="0,5,0,10" Text="{Binding TenMonAn, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Loại món ăn:"/>
        <ComboBox x:Name="cboLoaiMonAn" Margin="0,5,0,10" 
                  DisplayMemberPath="TenLoai"
                  SelectedValuePath="MaLoai"
                  SelectedValue="{Binding MaLoai, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Giá bán:"/>
        <TextBox Margin="0,5,0,10" Text="{Binding Gia, UpdateSourceTrigger=PropertyChanged}"/>

        <CheckBox Margin="0,5,0,20" IsChecked="{Binding DangBan, UpdateSourceTrigger=PropertyChanged}">Đang bán</CheckBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Lưu" Width="80" Margin="0,0,10,0" IsDefault="True" Click="BtnLuu_Click"/>
            <Button Content="Hủy" Width="80" IsCancel="True" Click="BtnHuy_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
