<Window x:Class="Doancanhan.DangNhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Nhập Hệ Thống" Height="500" Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Style cho TextBox và PasswordBox -->
        <Style TargetType="TextBox" x:Key="LoginTextBoxStyle">
            <Setter Property="Background" Value="#F0F3F4"/>
            <Setter Property="BorderBrush" Value="#D5D8DC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="PasswordBox" x:Key="LoginPasswordBoxStyle">
            <Setter Property="Background" Value="#F0F3F4"/>
            <Setter Property="BorderBrush" Value="#D5D8DC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,5,0,20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="5" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho nút Đăng Nhập -->
        <Style TargetType="Button" x:Key="LoginButtonStyle">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Bố cục chính của cửa sổ -->
    <Border CornerRadius="15" Background="White" BorderBrush="#D5D8DC" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.2" BlurRadius="15" Direction="0"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Thanh tiêu đề tùy chỉnh -->
            <TextBlock Text="Đăng Nhập" 
                       Grid.Row="0"
                       FontSize="22" FontWeight="Bold" 
                       Foreground="#2C3E50" 
                       HorizontalAlignment="Center"
                       Margin="0,30,0,20"/>

            <Button Content="&#x2715;" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Margin="0,10,10,0"
                    FontSize="12"
                    FontWeight="Bold"
                    Foreground="Gray"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="30" Height="30"
                    Click="BtnClose_Click"/>

            <!-- Nội dung form đăng nhập -->
            <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="40,10,40,40">
                <TextBlock Text="Tên đăng nhập" FontWeight="SemiBold" Foreground="#566573"/>
                <TextBox x:Name="txtTenDangNhap" Style="{StaticResource LoginTextBoxStyle}"/>

                <TextBlock Text="Mật khẩu" FontWeight="SemiBold" Foreground="#566573"/>
                <PasswordBox x:Name="txtMatKhau" Style="{StaticResource LoginPasswordBoxStyle}"/>

                <Button x:Name="btnDangNhap" 
                        Content="ĐĂNG NHẬP" 
                        Style="{StaticResource LoginButtonStyle}"
                        IsDefault="True" 
                        Click="BtnDangNhap_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
