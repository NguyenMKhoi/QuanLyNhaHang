<Window x:Class="Doancanhan.TrangChu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard - Hệ Thống Quản Lý Nhà Hàng" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen" Background="#F4F6F9"
        Loaded="Window_Loaded"
        Activated="Window_Activated">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="#FFFFFF" CornerRadius="10,0,0,10" Padding="10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Color="Black" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="QUẢN LÝ NHÀ HÀNG" Foreground="#2C3E50" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,30" TextWrapping="Wrap" TextAlignment="Center"/>

                <StackPanel Grid.Row="1" VerticalAlignment="Top">
                    <Button x:Name="btnTrangChu" Content="Trang chủ" Margin="0,5" Height="40" Background="#EAF2F8" Foreground="#2980B9" BorderThickness="2,0,0,0" BorderBrush="#2980B9" FontWeight="SemiBold" Click="BtnTrangChu_Click"/>
                    <Button x:Name="btnQuanLyDatBan" Content="Quản lý Đặt bàn" Margin="0,5" Height="40" Background="Transparent" Foreground="#34495E" BorderThickness="0" Click="BtnQuanLyDatBan_Click"/>
                    <Button x:Name="btnQuanLyMonAn" Content="Quản lý Món ăn" Margin="0,5" Height="40" Background="Transparent" Foreground="#34495E" BorderThickness="0" Click="BtnQuanLyMonAn_Click"/>
                    <Button x:Name="btnQuanLyDonHang" Content="Quản lý Đơn hàng" Margin="0,5" Height="40" Background="Transparent" Foreground="#34495E" BorderThickness="0" Click="BtnQuanLyDonHang_Click"/>
                    <Button x:Name="btnQuanLyNguoiDung" Content="Quản lý Người dùng" Margin="0,5" Height="40" Background="Transparent" Foreground="#34495E" BorderThickness="0" Click="BtnQuanLyNguoiDung_Click"/>
                </StackPanel>

                <Button x:Name="btnDangXuat" Grid.Row="2" Content="Đăng xuất" Margin="0,20,0,10" Height="40" Background="#E74C3C" Foreground="White" BorderThickness="0" Click="BtnDangXuat_Click"/>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <TextBlock Text="Tổng quan hoạt động" FontSize="28" FontWeight="Bold" Margin="0,0,0,20" Foreground="#34495E"/>

                <!-- Stat Cards Section -->
                <WrapPanel Margin="0,0,0,20">
                    <Border Width="280" Height="130" Background="#2ECC71" CornerRadius="8" Margin="10">
                        <StackPanel VerticalAlignment="Center" Margin="20">
                            <TextBlock Text="DOANH THU HÔM NAY" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtDoanhThuHomNay" Text="0 ₫" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Width="280" Height="130" Background="#3498DB" CornerRadius="8" Margin="10">
                        <StackPanel VerticalAlignment="Center" Margin="20">
                            <TextBlock Text="TỔNG ĐƠN HÀNG" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtTongDonHang" Text="0" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Width="280" Height="130" Background="#E67E22" CornerRadius="8" Margin="10">
                        <StackPanel VerticalAlignment="Center" Margin="20">
                            <TextBlock Text="TỔNG SỐ KHÁCH" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtSoKhachHomNay" Text="0" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>

                <!-- Lists Section -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="Đơn hàng gần đây" Margin="10" FontSize="16" FontWeight="SemiBold" BorderBrush="#BDC3C7">
                        <DataGrid x:Name="dgDonHangMoi" AutoGenerateColumns="False" IsReadOnly="True" Background="White" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Khách hàng" Binding="{Binding TenKhachHang}" Width="*"/>
                                <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TongTien, StringFormat='N0', ConverterCulture='vi-VN'}"/>
                                <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header="Đặt bàn sắp tới" Margin="10" FontSize="16" FontWeight="SemiBold" BorderBrush="#BDC3C7">
                        <ListView x:Name="lvDatBanSapToi" Background="White">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Khách hàng" DisplayMemberBinding="{Binding TenKhachHang}" Width="150"/>
                                    <GridViewColumn Header="Thời gian" DisplayMemberBinding="{Binding ThoiGianDat, StringFormat='HH:mm dd/MM'}"/>
                                    <GridViewColumn Header="Số khách" DisplayMemberBinding="{Binding SoKhach}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
