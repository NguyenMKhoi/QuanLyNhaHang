<Window x:Class="Doancanhan.ThemSuaDatBan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm / Sửa Đặt Bàn" Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        FontSize="14">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Tên khách hàng -->
            <RowDefinition Height="Auto"/>
            <!-- SĐT -->
            <RowDefinition Height="Auto"/>
            <!-- Ngày và Giờ -->
            <RowDefinition Height="Auto"/>
            <!-- Số khách -->
            <RowDefinition Height="Auto"/>
            <!-- Trạng thái -->
            <RowDefinition Height="*"/>
            <!-- Khoảng trống -->
            <RowDefinition Height="Auto"/>
            <!-- Nút bấm -->
        </Grid.RowDefinitions>

        <!-- Tên khách hàng -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Tên khách hàng:"/>
            <TextBox x:Name="txtTenKhachHang" Margin="0,5,0,0" Padding="5" />
        </StackPanel>

        <!-- Số điện thoại -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Số điện thoại:"/>
            <TextBox x:Name="txtSoDienThoai" Margin="0,5,0,0" Padding="5" 
                     PreviewTextInput="NumberValidationTextBox" MaxLength="10"/>
        </StackPanel>

        <!-- Ngày và Giờ đặt -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Ngày đặt:"/>
                <DatePicker x:Name="dpNgayDat" Margin="0,5,0,0"
                            DisplayDateStart="{Binding StartDate}" 
                            SelectedDateChanged="DpNgayDat_SelectedDateChanged" />
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                <TextBlock Text="Giờ đặt:"/>
                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtGio" Grid.Column="0" Width="45" MaxLength="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="5"
                             PreviewTextInput="NumberValidationTextBox" TextChanged="TxtGio_TextChanged"/>
                    <TextBlock Grid.Column="1" Text=":" VerticalAlignment="Center" Margin="5,0" FontWeight="Bold"/>
                    <TextBox x:Name="txtPhut" Grid.Column="2" Width="45" MaxLength="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="5"
                             PreviewTextInput="NumberValidationTextBox" TextChanged="TxtPhut_TextChanged"/>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- Số lượng khách -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Số lượng khách:"/>
            <TextBox x:Name="txtSoKhach" Margin="0,5,0,0" Padding="5" 
                     PreviewTextInput="NumberValidationTextBox"/>
        </StackPanel>

        <!-- Trạng thái -->
        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Trạng thái:"/>
            <ComboBox x:Name="cboTrangThai" Margin="0,5,0,0" Padding="5">
                <ComboBoxItem Content="Đã xác nhận"/>
                <ComboBoxItem Content="Đã đến"/>
                <ComboBoxItem Content="Đã hủy"/>
            </ComboBox>
        </StackPanel>

        <!-- Các nút chức năng -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button x:Name="btnLuu" Content="Lưu" Width="80" Height="35" Margin="0,0,10,0" IsDefault="True" Click="BtnLuu_Click"/>
            <Button x:Name="btnHuy" Content="Hủy" Width="80" Height="35" IsCancel="True" Click="BtnHuy_Click"/>
        </StackPanel>
    </Grid>
</Window>
