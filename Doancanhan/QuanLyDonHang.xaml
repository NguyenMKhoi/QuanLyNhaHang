<Window x:Class="Doancanhan.QuanLyDonHang"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản Lý Đơn Hàng" Height="600" Width="950"
        WindowStartupLocation="CenterScreen"
        Activated="Window_Activated">
    <Window.Resources>
        <!-- Style chung cho các nút chức năng -->
        <Style TargetType="Button" x:Key="FunctionButtonStyle">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style riêng cho nút Xóa -->
        <Style TargetType="Button" x:Key="DeleteButtonStyle" BasedOn="{StaticResource FunctionButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style riêng cho nút Thanh toán -->
        <Style TargetType="Button" x:Key="PayButtonStyle" BasedOn="{StaticResource FunctionButtonStyle}">
            <Setter Property="Background" Value="#2ECC71"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#27AE60"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#F4F6F9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Grid.Row="0" Text="QUẢN LÝ ĐƠN HÀNG" 
                   FontSize="24" FontWeight="Bold" 
                   Foreground="#2C3E50" 
                   HorizontalAlignment="Center" 
                   Margin="0,20,0,10"/>

        <!-- Thanh công cụ: Lọc và các nút chức năng -->
        <Border Grid.Row="1" Background="White" Padding="10" Margin="10,0,10,10" CornerRadius="5">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <CheckBox x:Name="chkHienThiDaHoanThanh" 
                          Content="Hiển thị đơn đã hoàn thành" 
                          VerticalAlignment="Center"
                          Margin="0,0,20,0"
                          Checked="ChkHienThiDaHoanThanh_Changed"
                          Unchecked="ChkHienThiDaHoanThanh_Changed"/>
                <Button Content="Xem Chi Tiết" Style="{StaticResource FunctionButtonStyle}" Click="BtnXemChiTiet_Click"/>
                <Button Content="Chuyển Trạng Thái" Style="{StaticResource FunctionButtonStyle}" Click="BtnChuyenTrangThai_Click"/>
                <Button Content="Thanh Toán" Style="{StaticResource PayButtonStyle}" Click="BtnThanhToan_Click"/>
                <Button Content="Xóa Đơn Hàng" Style="{StaticResource DeleteButtonStyle}" Click="BtnXoaDonHang_Click"/>
            </StackPanel>
        </Border>

        <!-- Bảng danh sách đơn hàng -->
        <DataGrid Grid.Row="2" x:Name="dgDonHang" Margin="10,0,10,10"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  SelectionMode="Single"
                  AlternatingRowBackground="#EAF2F8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã ĐH" Binding="{Binding MaDonHang}" Width="80"/>
                <DataGridTextColumn Header="Khách Hàng" Binding="{Binding TenKhachHang}" Width="*"/>
                <DataGridTextColumn Header="Thời Gian Tạo" Binding="{Binding ThoiGianTao, StringFormat='HH:mm dd/MM/yyyy'}" Width="160"/>
                <DataGridTextColumn Header="Tổng Tiền" Binding="{Binding TongTien, StringFormat='N0', ConverterCulture='vi-VN'}" Width="150"/>
                <DataGridTextColumn Header="Trạng Thái" Binding="{Binding TrangThai}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
