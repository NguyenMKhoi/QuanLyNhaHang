<Window x:Class="Doancanhan.QuanLyMonAn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản Lý Món Ăn" Height="600" Width="900"
        WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Hàng chứa các nút chức năng -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <Button x:Name="btnThem" Content="Thêm Món" Width="120" Height="35" Margin="0,0,10,0" Click="BtnThem_Click"/>
            <Button x:Name="btnSua" Content="Sửa Món" Width="120" Height="35" Margin="0,0,10,0" Click="BtnSua_Click"/>
            <Button x:Name="btnXoa" Content="Xóa Món" Width="120" Height="35" Background="IndianRed" Foreground="White" Click="BtnXoa_Click"/>
        </StackPanel>

        <!-- DataGrid để hiển thị danh sách món ăn -->
        <DataGrid x:Name="dgMonAn" Grid.Row="1" IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <!-- Binding chính xác các thuộc tính của lớp MonAn -->
                <DataGridTextColumn Header="Mã Món" Binding="{Binding MaMonAn}" Width="80"/>
                <DataGridTextColumn Header="Tên Món Ăn" Binding="{Binding TenMonAn}" Width="*"/>

                <!-- Binding đến thuộc tính TenLoai của đối tượng LoaiMonAn liên quan -->
                <DataGridTextColumn Header="Loại Món" Binding="{Binding LoaiMonAn.TenLoai}" Width="150"/>

                <!-- Định dạng giá tiền cho dễ đọc -->
                <DataGridTextColumn Header="Giá" Binding="{Binding Gia, StringFormat={}{0:N0} VNĐ}" Width="120"/>

                <!-- Hiển thị trạng thái bằng CheckBox -->
                <DataGridCheckBoxColumn Header="Đang Bán" Binding="{Binding DangBan}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
